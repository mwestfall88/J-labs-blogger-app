
<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<p class="flash">
	<%= flash.notice %>
</p>
<div id="container">
	<div id="content">
		<%= yield %>
		<hr>
		<h6>
			<% if logged_in? %>
				<%= "Logged in as #{current_user.username}" %>
				<%= link_to "(logout)", logout_path %>
			<% else %>
				Logged out
				<%= link_to "(login)", login_path %>
			<% end %>
		</h6>
		<br>
		<h7>
			<%= link_to "Create new user", new_author_path %>
		</h7>
	</div>
</div>

</body>
</html>
